<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <!-- Latest compiled and minified CSS -->
        <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' />
        <link href='/css/app.css' rel='stylesheet' />
        <link href='/css/theme.css' rel='stylesheet' />
        <script src='https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js' defer></script>
        <title>Login</title>
    </head>
    <body>

        <div class='container-fluid h-100 d-flex justify-content-center align-items-center background'>
            <div class='primary-container h-75 w-50 boxCorner d-flex flex-column justify-content-center'>
                <h1 class='display-large on-primary-container-text align-self-center mb-5'>REGISTER</h1>
                <form id="registerForm" class="mx-5" method="POST">
                    <div class='mb-3 mt-3'>
                        <label for='email' class='form-label on-primary-container-text'>Email:</label>
                        <input type='email' class='form-control' id='email' placeholder='Enter email' name='email' />
                    </div>
                    <div class='mb-3'>
                        <label for='pwd' class='form-label on-primary-container-text'>Password:</label>
                        <input type='password' class='form-control' id='pwd' placeholder='Enter password' name='pswd' />
                    </div>
                    <div class='mb-5'>
                        <label for='pwd' class='form-label on-primary-container-text'>Re-Password:</label>
                        <input type='password' class='form-control' id='re-pwd' placeholder='Enter re-password' name='re-pswd' />
                    </div>
                    <button id="btnRegister" type='submit' class='btn btn-info w-100 my-3'>Register</button>
                </form>
                <a class="align-self-end me-5"  href="/login">Already have an account? Login</a>
            </div>
        </div>

        <!-- Latest compiled JavaScript -->
        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'></script>
        <script src='/dist/login.js'></script>
    </body>
</html>